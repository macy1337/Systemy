#include <iostream>
#include <string>
using namespace std;

int Oblicz(string liczba, int system)
{
    int suma = 0;
    int n = liczba.size();
    for (int i = 0; i < liczba.size(); i++)
    {
        int check = liczba[i] * 1;
        if (check >= 65 and check <= 90)
        {
            int p = liczba[i] - 55;
            suma += (p * pow(system, (n - 1)));
        }
        if (check >= 48 and check <= 57)
        {
            int t = liczba[i] - 48;
            suma += (t * pow(system, (n - 1)));
        }
        if (check >= 97 and check <= 122)
        {
            int m = liczba[i] - 87;
            suma += (m * pow(system, (n - 1)));
        }
        n--;
    }
    return suma;
}

int main()
{
    string liczba = "a73";
    cout << Oblicz(liczba, 16) << endl;
    return 0;
}
