#include <iostream>
#include <string>
using namespace std;

long oblicz(string liczba, int p)
{
    int suma = 0;
    int check = liczba[0] * 1;
    int b = 0;
    if (check >= 48 and check <= 57)
        suma = check - 48;
    if (65 <= check and check <= 90)
        suma = check - 55;
    if (check >= 97 and check <= 122)
        suma = check - 87;
    for (int i = 1; i < liczba.size(); i++)
    {
        if (48 <= liczba[i] and liczba[i] <= 57)
            b = liczba[i] - 48;
        if (65 <= liczba[i] and liczba[i] <= 90)
            b = liczba[i] - 55;
        if (97 <= liczba[i] and liczba[i] <= 122)
            b = liczba[i] - 87;
        suma = suma * p + b;
    }
    return suma;
}

int main()
{
    string liczba = "AB34";
    cout << oblicz(liczba, 16) << endl;
    return 0;
}
